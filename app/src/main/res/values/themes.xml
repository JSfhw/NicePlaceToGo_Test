<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NicePlaceToGo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary</item> -->
    </style>

    <style name="Theme.NicePlaceToGo" parent="Base.Theme.NicePlaceToGo" />

    <style name="Title">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Welcome">
        <item name="android:textSize">64sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Camera">
        <item name="android:src">@drawable/ic_photo_camera</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Shoot">
        <item name="android:layout_margin">20dp</item>
        <item name="android:text">@string/shoot</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Button">
        <item name="android:layout_margin">20dp</item>
        <item name="android:text">@string/shoot</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ListItem">
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ListItem.Like">
        <item name="android:background">@color/primary</item>
        <item name="android:src">@drawable/ic_thumb_up</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_gravity">left|bottom</item>
    </style>

    <style name="ListItem.Description">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="ListItem.Latitude">

    </style>

    <style name="ListItem.Longitude">

    </style>

    <style name="ListItem.Location">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="ListItem.LocationGPS">
        <item name="android:textSize">10sp</item>
    </style>


    <style name="Community">
        <item name="android:layout_margin">20dp</item>
        <item name="android:text">@string/community</item>
        <item name="android:textSize">18sp</item>
    </style>


    <string name="community">Community</string>
</resources>
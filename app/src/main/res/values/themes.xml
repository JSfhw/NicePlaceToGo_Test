<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NicePlaceToGo_Test" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/red</item> -->
    </style>

    <style name="Theme.NicePlaceToGo_Test" parent="Base.Theme.NicePlaceToGo_Test" />

    <style name="Title">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Welcome">
        <item name="android:textSize">64sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Camera">
        <item name="android:src">@drawable/ic_photo_camera</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Shoot">
        <item name="android:layout_margin">20dp</item>
        <item name="android:text">@string/shoot</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Button">
        <item name="android:layout_margin">20dp</item>
        <item name="android:text">@string/shoot</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ListItem">
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ListItem.Description">
        <item name="android:textSize">16sp</item>
    </style>

</resources>